<!doctype html>
<html>
<head>
  <title>Courses</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= stylesheet_link_tag "uploadify", :media => "all" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
</head>
<body>
  <nav class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse"> 
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/admin/">Courses</a>
    </div>
    <div class="collapse navbar-collapse navbar-ex1-collapse">
      <ul class="nav navbar-nav">
        <li class="divider-vertical"></li>
        <li><%= link_to "Departments", admin_departments_path %></li>
        <li><%= link_to "Courses", admin_courses_path %></li>
        <li><%= link_to "Users", admin_users_path %></li>
        <li><%= link_to "Faculty", admin_faculties_path %></li>
        <li><%= link_to "Books", admin_books_path %></li>
        <li><%= link_to "Authors", admin_authors_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <strong>
              <i class="glyphicon glyphicon-user"></i>
              <%= @user[:name] %>
            </strong>
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li role="presentation">
              <form action="<%= admin_switch_to_path  %>" method="post" class="navbar-form form-inline col-lg-4">
                <input type="text" id="email" name="email" class="form-control input-sm" placeholder="God Mode" title="Enter the email of the user you want to switch to..">
              </form>
            </li>
            <li role="presentation"><a href="/">
              <span class="glyphicon glyphicon-chevron-left"></span> Leave admin mode
            </a></li>
          </ul>
        </li>
      </ul>
      <form action="<%= admin_courses_path %>" method="get" class="navbar-form input-group">
        <span class="input-group-addon glyphicon glyphicon-search" style="top: 0; "></span>
        <input type="text" name="code" class="form-control" placeholder="Course Code">
      </form>
    </div>
  </nav>
  <div id="wrap">
    <div class="container">
      <div class="s-push"></div>
      <%= yield %>
    </div>
    <div class="push"></div>
  </div>
  <div id="footer">
    <div class="container">
      <p class="muted credit">
        Copyleft <span class="copyleft">&copy;</span> 2014
      </p>
    </div>
  </div>
  <script type="text/javascript">
  	var app = {};
  	app["session_key"] = '<%= Rails.application.config.session_options[:key] %>';
  	app["session_val"] = '<%= cookies[Rails.application.config.session_options[:key]] %>';
  </script>
  <%= javascript_include_tag "vendor" %>
  <%= javascript_include_tag "admin_app" %>
  <script>
    $("body").popover({
      selector: "[rel='popover']"
    })
  </script>
</body>
</html>
