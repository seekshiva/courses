<script type="text/template" id="term-topics-template">
  <div class="row">
    <div class="list-group local-nav col-md-3">
      {{#unless edit_mode}}
        <a class="list-group-item {{#if show_all}}active{{/if}}" href="#_all_sections" data-toggle="tab">All</a>
      {{/unless}}
      {{#each term_sections}}
