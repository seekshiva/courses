          <span class="badge">{{this.topics.length}}</span>
          {{this.short_title}}
        </a>
      {{/each}}
      {{#if edit_mode}}
        {{#if faculty}}
          <div class="tab-content col-md-12">
            <form>
              <div class="field">
                <input type="text" class="form-control" id="new_section_title" placeholder="New Topic Title">
              </div>
              <div class="field">
                <input type="submit" class="form-action btn btn-primary btn-sm" id="create_section" value="Add New Topic"/>
              </div>
            </form>
          </div>
        {{/if}}
      {{/if}}
    </div>
    <div class="tab-content col-md-9">
      <div id="topic_filter">
        <div class="pull-right">
          <label class="muted">Filters:</label>
          <div id="ct_status_selector" class="btn-group" data-toggle="buttons">
            <label class="btn btn-default">
              <input id="_ct1" type="checkbox" {{#if selectors.ct_status.ct1}}checked{{/if}}> CT 1
            </label>
            <label class="btn btn-default">
              <input id="_ct2" type="checkbox" {{#if selectors.ct_status.ct2}}checked{{/if}}> CT 2
            </label>
            <label class="btn btn-default">
              <input id="_post_ct" type="checkbox" {{#if selectors.ct_status.ct1}}checked{{/if}}> Post CT
            </label>
          </div>
        </div>
        <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-search" style="top: 0;"></span>
          <input type="search" class="form-control" placeholder="Search a Topic" id="search_box">
        </div>
      </div>

      {{#unless edit_mode}}
        {{#unless term_sections}}
          <div class="tab-pane active _topic_list" id="_topic_all">
            <table class="table bottom_line">
              <tbody>
                <tr><td>
                  No topics were found that matched the given criteria.
                </td></tr>
              </tbody>
            </table>
          </div>
        {{/unless}}
        <div class="tab-pane _topic_list {{#if show_all}}active{{/if}}" id="_all_sections">
          {{#each term_sections}}
            {{#each this.topics}}
              <div class="panel panel-default">
                <div class="panel-heading">
                  {{this.title}}
                  <small class="text-muted">- {{this.ct_status}}</small>
                </div>
                {{#if this.description}}
                  <div class="panel-body">
                    <p>{{{toMarkdown this.description}}}</p>
                  </div>
                {{/if}}
                
                <div class="list-group">
                  {{#each this.reference}}
                    <div class="list-group-item">
                      <i class="glyphicon glyphicon-book pull-left"></i>
                      <div class="list-group-item-heading">{{this.book}}</div>
                      <p class="list-group-item-text">{{this.indices}}</p>
                    </div>
                  {{/each}}
                  {{#each this.notes}}
                    <div class="list-group-item">
                      <i class="fa fa-book fa-2x pull-left"></i>
                      <div class="list-group-item-heading">{{this.name}}</div>
                      <p class="list-group-item-text">
                        <a class="external" href="{{this.url}}" target="_blank">Download</a> |
                        <a class="external" href="http://docs.google.com/viewer?url={{../../../../../host}}{{this.url}}" target="_blank">Read</a>
                      </p>
                    </div>
                  {{/each}}
                </div>
              </div>
            {{/each}}
          {{/each}}
        </div>
      {{/unless}}


      {{#each term_sections}}
        <div class="tab-pane _topic_list {{#if this.active}}active{{/if}}" id="_section_{{this.id}}">
          <div>
            {{#if ../edit_mode}}
              {{#if this.edit}}
                <div class="field">
                  <input type="text" class="form-control" id="section_title_{{this.id}}" value="{{this.title}}" placeholder="Topic title"/>
                </div>
                {{#if ../../../faculty}}
                  <div class="btn-group pull-right">
                    <div class="btn btn-default btn-sm btn-success edit_section" section-id="{{this.id}}">
                      <i class="glyphicon glyphicon-ok"></i>
                    </div>
                    <div class="btn btn-default btn-sm toggle_edit_section" section-id="{{this.id}}">
                      <i class="glyphicon glyphicon-remove"></i>
                    </div>
                    <div class="btn btn-sm btn-danger delete_section" section-id="{{this.id}}">
                      <i class="glyphicon glyphicon-trash glyphicon-white"></i>
                    </div>
                  </div>
                {{/if}}
              {{else}}
                {{#if ../../../faculty}}
                  <div class="btn-group pull-right">
                    <div class="btn btn-default btn-sm toggle_edit_section" section-id="{{this.id}}">
                      <i class="glyphicon glyphicon-pencil"></i>
                    </div>
                    <div class="btn btn-sm btn-danger delete_section" section-id="{{this.id}}">
                      <i class="glyphicon glyphicon-trash glyphicon-white"></i>
                    </div>
                  </div>
                {{/if}}
                <h4>{{this.title}}</h4>
              {{/if}}
            {{else}}
              <h4>{{this.title}}</h4>
            {{/if}}
          </div>
          
          {{#unless this.topics}}
            <div class="panel panel-default">
              <div class="panel-body">
                No topics found under this section
              </div>
            </div>
          {{/unless}}
          {{#each this.topics}}
            <div class="panel panel-default">
              <div class="panel-heading">
                {{#if ../../edit_mode}}
                  <div class="btn-group btn-group-xs pull-right">
                    <div class="btn btn-default toggle_edit_topic" topic-id="{{this.id}}">
                      <i class="glyphicon glyphicon-pencil"></i>
                    </div>
                    <div class="btn btn-danger delete_topic" topic-id="{{this.id}}">
                      <i class="glyphicon glyphicon-trash glyphicon-white"></i>
                    </div>
                  </div>
                {{/if}}
                {{this.title}}
                <span class="text-muted">- {{this.ct_status}}</span>
              </div>
              <div class="panel-body">
                {{#if ../../edit_mode}}
                  {{#if this.edit}}
                    <form>
                      {{#if ../../../../faculty}}
                        <div class="btn-group pull-right field">
                          <div class="btn btn-default btn-sm btn-success edit_topic" topic-id="{{this.id}}">
                            <i class="glyphicon glyphicon-ok"></i>
                          </div>
                          <div class="btn btn-default btn-sm toggle_edit_topic" topic-id="{{this.id}}">
                            <i class="glyphicon glyphicon-remove"></i>
                          </div>
                          <div class="btn btn-danger btn-sm delete_topic" topic-id="{{this.id}}">
                            <i class="glyphicon glyphicon-trash glyphicon-white"></i>
                          </div>
                        </div>
                      {{/if}}
                      <div class="field">
                        <input type="text" value="{{this.title}}" class="form-control" placeholder="Topic Title" id="topic_title_{{this.id}}"/>
                      </div>
                      <div class="field">
                        <select id="topic_ct_{{this.id}}" class="form-control">
                          {{#with this.ct_select}}
                            <option value="CT1" {{#if CT1 }}selected{{/if}}>CT1</option>
                            <option value="CT2" {{#if CT2 }}selected{{/if}}>CT2</option>
                            <option value="Post CT" {{#if PostCT }}selected{{/if}}>Post CT</option>
                          {{/with}}
                        </select>
                      </div>
                      <div class="field">
                        <select multiple=true class="selectpicker show-tick show-menu-arrow" data-live-search="true" data-width='auto' title="Select Related Note(s)" data-header="Select Related Note(s)" id="topic_notes_{{this.id}}">
                          {{#each this.notes}}
                            <option value="{{this.note_id}}" {{#if this.id}}selected{{/if}}>{{this.name}}</option>
                          {{/each}}
                        </select>
                      </div>
                      <div class="form-group">
                        <p class="help-block small pull-right">*Description is parsed with <a href="https://github.com/adam-p/markdown-here/wiki/Markdown-Cheatsheet" class="external" target="_blank">Markdown</a></p>
                        <textarea id="topic_description_{{this.id}}" class="form-control" rows="8">{{this.description}}</textarea>
                      </div>
                      {{#if this.reference}}
                        <table class="table table-bordered">
                          <thead>
                            <tr>
                              <th>Book</th>
                              <th>Index/Page No</th>
                            </tr>
                          </thead>
                          <tbody>
                            {{#each this.reference}}
                              <tr>
                                <th><small>{{this.book}}</small></th>
                                <td><input type="text" value="{{this.indices}}" term-ref-id="{{this.term_ref_id}}" book-name="{{this.book}}" topic-id="{{../this.id}}" book-id="{{this.book_id}}" ref-id="{{this.id}}" class="form-control topic_reference"/></td>
                              </tr>
                            {{/each}}
                          </tbody>
                        </table>
                      {{/if}}
                    </form>
                  {{/if}}
                {{/if}}
                <p>{{{toMarkdown this.description}}}</p>
              </div>
                      
              <div class="list-group">
                {{#each this.reference}}
                  <div class="list-group-item">
                    <i class="glyphicon glyphicon-book pull-left"></i>
                    <div class="list-group-item-heading">{{this.book}}</div>
                    <p class="list-group-item-text">{{this.indices}}</p>
                  </div>
                {{/each}}
                {{#each this.notes}}
                  <div class="list-group-item">
                    <i class="fa fa-book fa-2x pull-left"></i>
                    <div class="list-group-item-heading">{{this.name}}</div>
                    <p class="list-group-item-text">
                      <a class="external" href="{{this.url}}" target="_blank">Download</a> |
                      <a class="external" href="http://docs.google.com/viewer?url={{../../../../../host}}{{this.url}}" target="_blank">Read</a>
                    </p>
                  </div>
                {{/each}}
              </div>
            </div>
          {{/each}}
          {{#if ../edit_mode}}
            <div class="panel panel-success">
              <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#add_new_subtopic" style="cursor: pointer; ">
                Add New Subtopic
              </div>
              <div class="panel-body panel-collapse collapse" id="add_new_subtopic">
                <form role="form">
                  <div class="form-group">
                    <input type="text" class="form-control" id="topic_title_{{this.id}}" placeholder="New Subtopic Title">
                  </div>
                  <div class="form-group">
                    <select id="topic_ct_{{this.id}}" class="form-control">
                      <option value="CT1">CT1</option>
                      <option value="CT2">CT2</option>
                      <option value="Post CT">Post CT</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <p class="help-block small pull-right">*Description is parsed with <a href="https://github.com/adam-p/markdown-here/wiki/Markdown-Cheatsheet" class="external" target="_blank">Markdown</a></p>
                    <textarea id="topic_description_{{this.id}}" class="form-control" rows="8" placeholder="Description"></textarea>
                  </div>
                  <div class="field pull-right">
                    <input type="submit" class="form-action btn btn-primary btn-sm create_topic" section-id="{{this.id}}" value="Add New Topic"/>
                  </div>
                </form>
              </div>
            </div>
          {{/if}}
        </div>
      {{/each}}
    </div>
  </div>
</script>

