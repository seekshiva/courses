<%= form_for([:admin, @faculty]) do |f| %>
<% if @faculty.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@faculty.errors.count, "error") %> prohibited this faculty from being saved:</h2>

  <ul>
    <% @faculty.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<fieldset>
  <legend><%= @legend %></legend>
  <div class="field">
    <%= f.label :prefix %>
    <%= f.select :prefix, options_for_select(@prefix_array, @faculty.prefix) %>
  </div>
  <% if @legend == "Edit Faculty" %>
    <div class="field">
      Name : <%= @faculty.user.name %>
    </div>
    <div class="field">
      Email : <%= @faculty.user.email %>.nitt.edu
    </div>
  <% else %>
    <div class="field">
      <%= f.label :user_id %>
      <%= f.select :user_id, options_for_select(@users_array, @user_id) %>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :designation %>
    <%= f.text_field :designation %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary btn-success pull-right" %>
    <%= link_to "Back", admin_faculties_path, class: "btn btn-default btn-small" %>
  </div>
</fieldset>
<% end %>
