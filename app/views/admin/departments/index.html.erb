<table class="table">
  <caption><h3>Departments</h3></caption>
  <tbody>
    <% if @departments.length == 0 %>
    <tr>
      <td colspan="5">
      No department was found in the database. Click <%= link_to "here", new_admin_department_path %> to add new department.
      </td>
    </tr>
    <% else %>
    <% @departments.each do |department| %>
    <tr>
      <td><%= link_to department.name, admin_department_path(department), class: 'btn btn-small btn-link' %></td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br />

<a href="<%= url_for new_admin_department_path %>" class="btn btn-default btn-small"><span class="glyphicon glyphicon-plus" style="color: green; "></span> Add Department</a>
