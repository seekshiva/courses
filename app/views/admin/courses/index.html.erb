<table class="table">
  <caption><h3>Courses</h3></caption>
  <thead>
    <tr>
      <th>Subject code</th>
      <th>Name</th>
      <th>Credits</th>
      <th>History</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
    <tr>
      <td><%= course.subject_code %></td>
      <td><%= link_to course.name, [:admin, course], class: 'btn btn-link btn-small' %></td>
      <td><%= course.credits %></td>
      <td><%= course.terms.length %></td>
      <td><%= link_to 'Edit', edit_admin_course_path(course), class: 'btn btn-default btn-mini' %></td>
      <td><%= link_to 'Destroy', [:admin, course], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-mini btn-danger' %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

<a href="<%= url_for new_admin_course_path %>" class="btn btn-default">
  <span class="glyphicon glyphicon-plus" style="color: green; "></span>
  New Course
</a>
