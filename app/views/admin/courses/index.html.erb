<div class="span12" style="text-align:center">
  <caption><h3>Courses</h3></caption>
</div>

<form action="<%= admin_courses_path %>" method="get" class="input-group form-group">
  <span class="input-group-addon glyphicon glyphicon-search" style="top: 0; "></span>
  <input type="text" name="search" class="form-control" placeholder="Course Code/Name">
</form>

<table class="table">
  <div class="pull-right">
    <%= page_navigation_links @courses%>
  </div>

  <a href="<%= url_for new_admin_course_path %>" class="btn btn-default pull-left">
    <span class="glyphicon glyphicon-plus" style="color: green; "></span>
    New Course
  </a>

  <thead>
    <tr>
      <th>Subject code</th>
      <th>Name</th>
      <th>Credits</th>
      <th>History</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
    <tr>
      <td><%= course.subject_code %></td>
      <td><%= link_to course.name, admin_course_terms_path(course), class: 'btn btn-link btn-small' %></td>
      <td><%= course.credits %></td>
      <td><%= course.terms.length %></td>
      <td><%= link_to 'Edit', edit_admin_course_path(course), class: 'btn btn-default btn-mini' %></td>
      <td><%= link_to 'Remove', [:admin, course], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-mini btn-danger' %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="pull-right">
  <%= page_navigation_links @courses%>
</div>
<a href="<%= url_for new_admin_course_path %>" class="btn btn-default">
  <span class="glyphicon glyphicon-plus" style="color: green; "></span>
  New Course
</a>
