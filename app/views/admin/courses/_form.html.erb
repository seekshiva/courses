<%= form_for([:admin, @course]) do |f| %>
<% if @course.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

  <ul>
    <% @course.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>


<fieldset>
  <% if @legend %>
  <legend><%= @legend %></legend>
  <% end %>
  <div class="field">
    <%= f.text_field :subject_code, class: "form-control input-sm", placeholder: "Course Code" %>
  </div>
  <div class="field">
    <%= f.text_field :name, class: "form-control input-lg", placeholder: "Course Name" %>
  </div>
  <div class="field">
    <%= f.number_field :credits, class: "form-control", placeholder: "# Credits" %>
  </div>
  <div class="form-group">
    <p class="help-block small pull-right">*Course Description is parsed with <a href="https://github.com/adam-p/markdown-here/wiki/Markdown-Cheatsheet" class="external" target="_blank">Markdown</a></p>
    <%= f.text_area :about, class: "form-control", placeholder: "About Course", rows: 10 %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-large btn-primary" %>
    <%= link_to "Back", [:admin, @course], class: "btn btn-default btn-small" %>
  </div>
</fieldset>
<% end %>

